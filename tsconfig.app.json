{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "strict": true,
    "strictNullChecks": true, // Aktiviert strikte Prüfung für null
    "noImplicitAny": true,
    "skipLibCheck": true, // Ignoriert Konflikte in Bibliothekstypen

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
